
			java -Xmx500m -jar -Djava.io.tmpdir=/workdir/psb84/scViral/temp /programs/picard-tools-2.1.1/picard.jar SamToFastq 				INPUT=results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_tagged_unmapped.bam FASTQ=results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_tagged_unmapped.fastq ;

			/programs/STAR-2.5.3a/bin/Linux_x86_64_static/STAR 				--genomeDir references/mm10/mm10_STAR_Index 				--runThreadN 6 				--outFilterMismatchNmax=10 				--readFilesIn results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_tagged_unmapped.fastq 				--genomeLoad LoadAndKeep 				--outReadsUnmapped Fastx 				--outFileNamePrefix results//Lcell_T3Dpos_DARTseq_1/logs/Lcell_T3Dpos_DARTseq_1_STAR_ ;

			cp results//Lcell_T3Dpos_DARTseq_1/logs/Lcell_T3Dpos_DARTseq_1_STAR_Aligned.out.sam results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_Aligned.sam ;
			cp results//Lcell_T3Dpos_DARTseq_1/logs/Lcell_T3Dpos_DARTseq_1_STAR_Unmapped.out.mate1 results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_STAR_host_unaligned.fastq ;

			java -Djava.io.tmpdir=/workdir/psb84/scViral/temp -Dsamjdk.buffer_size=131072 -XX:GCTimeLimit=50 				-XX:GCHeapFreeLimit=10 -Xmx4000m -jar /programs/picard-tools-2.1.1/picard.jar SortSam				INPUT=results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_Aligned.sam OUTPUT=results//Lcell_T3Dpos_DARTseq_1/Lcell_T3Dpos_DARTseq_1_Aligned_sorted.sam 				SORT_ORDER=queryname TMP_DIR=/workdir/psb84/scViral/temp;
			